# Environment Variables Template

# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ===========================
# BACKEND CONFIGURATION
# ===========================

# Database
DATABASE_URL=jdbc:postgresql://localhost:5432/ecomama_dev
DATABASE_USERNAME=ecomama_user
DATABASE_PASSWORD=ecomama_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-minimum-32-characters
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# Email Configuration (example with Gmail)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# File Storage
FILE_UPLOAD_DIR=./uploads
FILE_MAX_SIZE=10485760

# AWS S3 (optional, for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=ecomama-uploads

# ===========================
# FRONTEND CONFIGURATION
# ===========================

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# Stripe Publishable Key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Nominatim (Geocoding)
NEXT_PUBLIC_NOMINATIM_URL=https://nominatim.openstreetmap.org

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================
# DEVELOPMENT TOOLS
# ===========================

# Node Environment
NODE_ENV=development

# Spring Profile
SPRING_PROFILES_ACTIVE=dev
